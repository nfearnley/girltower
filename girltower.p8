function tower:new(args)
 args = args or {}
 o = setmetatable({}, self)
 o.x = args.x or 0
 o.y = args.y or 0
 o.p_one = nildef(args.p_one, 8)
 o.p_two = nildef(args.p_two, 12)
 return o
end

function tower:draw()
	pal(8,self.p_one)

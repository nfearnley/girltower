__lua__
-- girl tower
-- by natalie fearnley

function _init()
  col=12
  menu=0
  offset=0
  options={
    {name="dark blue", color=1},
    {name="dark purple", color=2},
    {name="dark green", color=3},
    {name="brown", color=4},
    {name="dark grey", color=5},
    {name="light grey", color=6},
    {name="white", color=7},
    {name="red", color=8},
    {name="orange", color=9},
    {name="yellow", color=10},
    {name="green", color=11},
    {name="blue", color=12},
    {name="lavender", color=13},
    {name="pink", color=14},
    {name="light peach", color=15}
  }
  music(0)
end

function _update()
  if btnp(⬆️) and menu > 0 then
    menu-=1
    sfx(0)
  elseif btnp(⬇️) and menu < count(options)-1 then
   	menu+=1
   	sfx(0)
  end
  
  if btnp(❎) then
    newcol=options[menu+1].color
    if newcol~=col then
      col=newcol
      sfx(1)
    end
  end
  
  if menu<offset then
    offset=menu
  elseif menu>offset+5 then
    offset=menu-5
  end
end

function _draw()
  cls()
  map(0,0,0,0,8,8)
  pal(12,col)
  spr(7,8,9+8*(menu-offset))
  clip(5,5,54,54)
  for i,o in pairs(options) do
   print(o.name, 12, 1+(i-offset)*8)
  end
end


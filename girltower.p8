path = {
 {x=5*8,y=15*8},
 {x=5*8,y=14*8},
 {x=9*8,y=14*8},
 {x=9*8,y=11*8},
 {x=3*8,y=11*8},
 {x=3*8,y=14*8},
 {x=1*8,y=14*8},
 {x=1*8,y=4*8},
 {x=3*8,y=4*8},
 {x=3*8,y=8*8},
 {x=8*8,y=8*8},
 {x=8*8,y=4*8},
 {x=5*8,y=4*8},
 {x=5*8,y=0*8}
}

enemy = {}
enemy.__index = enemy

function enemy:new(args)
 args = args or {}
 o = setmetatable({}, self)
 o.step = 1
 o.x = path[o.step].x
 o.y = path[o.step].y
 return o
end

function enemy:update()
 -- we've reached the castle
 if self.step == #path then
  return
 end
 goal=path[self.step+1]
 if (self.x < goal.x) self.x+=1
 if (self.x > goal.x) self.x-=1
 if (self.y < goal.y) self.y+=1
 if (self.y > goal.y) self.y-=1
 if (self.x == goal.x and self.y == goal.y) self.step+=1
end

function enemy:draw()
 spr(6,self.x,self.y)
end

